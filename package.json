{
  "name": "sdc-product",
  "version": "1.0.0",
  "description": "Hack Reactor SDC Project - Products API",
  "author": "Lawrence Good - Lawrence.Good55@Gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zombies-Hackreactor/Lawrence-SDC.git"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "cross-env NODE_ENV=production npx webpack",
    "dev": "cross-env NODE_ENV=development npx webpack",
    "test": "jest --detectOpenHandles",
    "test:watch": "cross-env WATCH=true jest --watch --detectOpenHandles",
    "lint": "npx eslint --cache --fix server/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:sql:reset": "psql -U postgres -a -f server/database/queries/reset.sql",
    "db:sql:seed": "ts-node server/database/seed.js"
  },
  "nodemonConfig": {
    "ts": "ts-node",
    "watch": [
      "server/**/*"
    ]
  },
  "lint-staged": {
    "server/**/*.ts": "eslint --cache --fix"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.11",
    "@swc/jest": "^0.2.23",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.8",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "nodemon-webpack-plugin": "^4.8.1",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^6.7.1",
    "pg": "^8.8.0"
  }
}
